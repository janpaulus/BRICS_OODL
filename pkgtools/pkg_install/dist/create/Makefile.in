srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
sbindir=	@sbindir@
mandir=		@mandir@
datarootdir=	@datarootdir@

man1dir=	$(mandir)/man1
cat1dir=	$(mandir)/cat1

BOOTSTRAP=	@bootstrap@

CC=		@CC@
CCLD=		$(CC)
DEFS=		@DEFS@
CFLAGS=		@CFLAGS@
LDFLAGS=	@LDFLAGS@ -L../lib

INSTALL=	@INSTALL@

PROG=		robotpkg_create

ifeq (,$(strip $(BOOTSTRAP)))
LIBS=		-linstall -larchive -lbz2 -lz @LIBS@
CPPFLAGS=	@CPPFLAGS@ -I. -I$(srcdir) -I../lib
OBJS=	main.o perform.o pl.o util.o build.o
else
LIBS=		-linstall @LIBS@
CPPFLAGS=	@CPPFLAGS@ -I. -I$(srcdir) -I../lib -DBOOTSTRAP
OBJS=	main.o perform.o pl.o util.o
endif

all: $(PROG)

.c.o:
	$(CC) $(DEFS) $(CPPFLAGS) $(CFLAGS) -c $<

$(PROG): $(OBJS)
	$(CCLD) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

clean:
	rm -f $(OBJS) $(PROG)

install:
	$(INSTALL) -m 755 -d ${DESTDIR}$(sbindir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(man1dir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(cat1dir)
	$(INSTALL) $(PROG) ${DESTDIR}$(sbindir)/$(PROG)
	$(INSTALL) -m 444 $(PROG).1 ${DESTDIR}$(man1dir)/$(PROG).1
	$(INSTALL) -m 444 $(PROG).cat1 ${DESTDIR}$(cat1dir)/$(PROG).0
