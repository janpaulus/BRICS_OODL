srcdir=		@srcdir@

pkgdbdir=	@pkgdbdir@
mandir=		@mandir@
datarootdir=	@datarootdir@
sysconfdir=	@sysconfdir@

cat5dir=	$(mandir)/cat5
cat7dir=	$(mandir)/cat7
man5dir=	$(mandir)/man5
man7dir=	$(mandir)/man7

BOOTSTRAP=	@bootstrap@
SSL_SUPPORT=	@ssl_support@

RANLIB=		@RANLIB@
AR=		@AR@
CC=		@CC@
CPPFLAGS=	@CPPFLAGS@ -I. -I$(srcdir)
DEFS=		@DEFS@ -DDEF_LOG_DIR=\"$(pkgdbdir)\"
CFLAGS=		@CFLAGS@

INSTALL=	@INSTALL@

LIB=	libinstall.a

OBJS=	automatic.o conflicts.o decompress.o dewey.o fexec.o file.o \
	gpgsig.o global.o iterate.o license.o lpkg.o opattern.o \
	parse-config.o pkgdb.o plist.o remove.o \
	str.o var.o version.o vulnerabilities-file.o xwrapper.o

CPPFLAGS+=	-DSYSCONFDIR=\"$(sysconfdir)\"

ifneq (,$(strip $(BOOTSTRAP)))
CPPFLAGS+=	-DBOOTSTRAP
else
OBJS+=	pkg_io.o pkg_signature.o
endif

ifneq (,$(strip $(SSL_SUPPORT)))
CPPFLAGS+=	-DHAVE_SSL
OBJS+=		pkcs7.o
endif

all: $(LIB)

.c.o:
	$(CC) $(DEFS) $(CPPFLAGS) $(CFLAGS) -c $<

$(LIB): $(OBJS)
	$(AR) crv $@ $(OBJS)
	$(RANLIB) $@

clean:
	rm -f $(OBJS) $(LIB)

install:
	$(INSTALL) -m 755 -d ${DESTDIR}$(man5dir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(cat5dir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(man7dir)
	$(INSTALL) -m 755 -d ${DESTDIR}$(cat7dir)
	$(INSTALL) -m 444 robotpkg_summary.5 ${DESTDIR}$(man5dir)/robotpkg_summary.5
	$(INSTALL) -m 444 robotpkg_summary.cat5 ${DESTDIR}$(cat5dir)/robotpkg_summary.0
	$(INSTALL) -m 444 pkg_install.conf.5 ${DESTDIR}$(man5dir)/pkg_install.conf.5
	$(INSTALL) -m 444 pkg_install.conf.cat5 ${DESTDIR}$(cat5dir)/pkg_install.conf.0
	$(INSTALL) -m 444 robotpkg.7 ${DESTDIR}$(man7dir)/robotpkg.7
	$(INSTALL) -m 444 robotpkg.cat7 ${DESTDIR}$(cat7dir)/robotpkg.0
